<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crea una cuenta</title>
    <%- include("../partials/loginHead.ejs"); %>
    <%- include("../partials/css.ejs"); %>
    
</head>

<body>

    <form action="/api/signup" method="post" enctype="multipart/form-data" class="signupForm">
        <div class="container py-5 h-100">
          <div>
            <div>
              <div>
                <div>
      
                  <div>
      
                    <h2>Registrarse</h2>

                    <p class="errorMsg"><%= message.join(", "); %></p>
                    <p>Ingresa tus datos para crear una cuenta</p>
      
                    <div >
                      <input type="text" id="username" name="username"  required/>
                      <label  for="username">Nombre de usuario</label>
                    </div>

                    <div >
                        <input type="email" id="email" name="email"  required/>
                        <label  for="email">Email</label>
                      </div>

                    <div >
                      <input type="password" id="password" name="password"  required/>
                      <label class="form-label" for="password">Contraseña</label>
                    </div>

                    <div >
                      <input type="text" id="name" name="name" class="form-control form-control-lg" required/>
                      <label  for="name">Nombre</label>
                    </div>

                    <div >
                      <input type="number" id="age" name="age"  min=13 max=99 required/>
                      <label  for="age">Edad</label>
                    </div>

                    <div >
                      <input type="text" id="address" name="address"  required/>
                      <label  for="address">Direccion</label>
                    </div>

                    <div >
                      <input id="phone" type="tel" name="phone"  size="20" required/>
                      <!-- <input type="tel" name="phone" class="form-control form-control-lg" size="20" required/> -->
                      <label class="form-label" for="phone" id="phoneOut">Ingresa un número telefónico</label>
                    </div>

                    <div >
                      <input  type="file" id="photo" name="photo" required>
                      <label for="formFile" >Foto/Avatar</label>
                    </div>
      
                    <button  type="submit">Registrarse</button>
      
                  </div>
      
                  <div>
                    <p class="mb-0">¿Ya tenés una cuenta? <a href="/api/login" >Inicia sesión</a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </form>

